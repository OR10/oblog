{% extends 'base.html.twig' %}

{% block title %}Site Name{% endblock %}

{% block header %}
    <div id="header">
        <div class="container">
            <div class="row" name="header-row">
                <div id="header-title" class="col-md-4" itemscope itemtype="https://schema.org/Organization">
                    <a href="{{ path('home') }}" itemprop="url">
                        <span name="title" itemprop="name">Site Name</span>
                    </a>
                    <span itemscope itemtype="http://schema.org/Person">
                        <span name="author" itemprop="name">--- smile a lot ---</span>
                    </span>
                </div>
                <div id="header-nav" class="col-md-8">
                    <nav class="navbar navbar-expand-lg">
                        <div class="collapse navbar-collapse">
                            <ul class="navbar-nav mr-auto" name="navbar-items">
                                <li class="nav-item dropdown" id="blog-dropdown">
                                    <a href="{{ path('blog') }}" class="nav-link" role="button" aria-haspopup="true" aria-expanded="false">Блог</a>
                                    <div class="dropdown-menu" aria-labelledby="navbarDropdown" name="dropdown-block">
                                        <a class="dropdown-item" href="#">Психология</a>
                                        <a class="dropdown-item" href="#">Философия</a>
                                        <a class="dropdown-item" href="#">Программирование</a>
                                        <a class="dropdown-item" href="#">Жиза</a>
                                    </div>
                                </li>
                                <li class="nav-item">
                                    <a href="{{ path('about') }}" class="nav-link">Обо мне</a>
                                </li>
                            </ul>
                        </div>
                    </nav>
                </div>
            </div>
        </div>        
    </div>
{% endblock %}

{% block footer %}
    <div id="footer">
        <div class="container">
            <span class="align-middle">
                <b>2018</b>
            </span>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('default/bootstrap/css/bootstrap.min.css') }}">
    <link rel="stylesheet" type="text/css" href="{{ asset('default/css/main.css') }}">
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('default/components/jquery/jquery.min.js') }}"></script>
    <script src="{{ asset('default/bootstrap/js/bootstrap.min.js') }}"></script>
    <script src="{{ asset('default/js/main.js') }}"></script>
{% endblock %}
