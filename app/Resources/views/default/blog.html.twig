{% extends 'default/index.html.twig' %}

{% block content %}
	<h1 style="text-align: center;">{{ page_title }}</h1>
	{% for post in posts %}
		<div class="single-post">
			<h2 class="post-title"><a href="{{ path('post_page', {'categorySlug': post.categoryId.slug, 'postSlug': post.slug}) }}">{{ post.title }}</a></h2>
			<div class="post-preview">
				{{ post.text|slice(0, 250) ~ '...'  }}
			</div>
			<div class="post-details">
				<span class="post-category">
					<a href="#">{{ post.categoryId.name }}</a>
				</span>
				<span class="post-date">
					{{ post.createdDate|date("Y-m-d") }}
				</span>
			</div>
		</div>
	{% endfor %}
{% endblock %}

